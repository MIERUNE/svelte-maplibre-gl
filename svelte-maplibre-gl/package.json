{
	"name": "svelte-maplibre-gl",
	"version": "1.0.0",
	"license": "(MIT OR Apache-2.0)",
	"description": "Build interactive web maps effortlessly with MapLibre GL JS and Svelte",
	"repository": {
		"url": "https://github.com/MIERUNE/svelte-maplibre-gl"
	},
	"homepage": "https://svelte-maplibre-gl.mierune.dev/",
	"keywords": [
		"map",
		"svelte",
		"maplibre",
		"maplibre-gl",
		"maplibre-gl-js",
		"geospatial",
		"mapping",
		"gis"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"maplibre-gl": "^5.0.0 || ^4.0.0",
		"svelte": ">=5.0.0"
	},
	"devDependencies": {
		"@sveltejs/kit": "catalog:",
		"@sveltejs/package": "catalog:",
		"@sveltejs/vite-plugin-svelte": "catalog:",
		"@types/geojson": "catalog:",
		"maplibre-gl": "catalog:",
		"publint": "catalog:",
		"svelte": "catalog:",
		"svelte-check": "catalog:",
		"typescript": "catalog:",
		"vite": "catalog:"
	}
}
